@model List<Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de productos</h5>
    </div>
    <div class="card-body">
        <a asp-action="Crear" asp-controller="Producto" class="btn btn-primary">Agregar un producto</a>
        <br /><br /><br />
        <table class="d-lg-table table-responsive table-bordered" align="center">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Modelo</th>
                    <th>Descripción</th>
                    <th>Costo</th>
                    <th>Stock</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Modelo</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Costo</td>
                        <td>@item.Stock</td>
                        <td>
                            <a asp-action="Actualizar" asp-controller="Producto" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Borrar" asp-controller="Producto" class="btn btn-danger" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
