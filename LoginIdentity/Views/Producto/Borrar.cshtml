@model Producto
@{
    ViewData["Title"] = "Borrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Eliminar información del producto</h5>
    </div>
    <div class="card-body">
        <form asp-action="Borrar" asp-controller="Producto" method="post">
            <input asp-for="Id" type="hidden" class="form-control" />

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el producto : @Html.DisplayTextFor(m => m.Nombre)?
            </div>

            <button type="submit" class="btn btn-primary">Borrar</button>

            <a asp-action="Index" asp-controller="Producto" class="btn btn-secondary">Volver</a>
        </form>
    </div>
</div>

